<div class="grid-single grid-single-pad"> <!-- Main Grid -->
<a href="/"><img src="/assets/myBallotLogo.png" alt="My Ballot Chicago Logo" class="logo-single"></a>

<div class="col-single"> <!-- Single Col -->

    <!-- Box -->
    <section class="contentBox">

<h1>Listing positions</h1>

<table>
  <tr>
    <th>Name</th>
	<th>Note</th>
    <th>Description</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @positions.each do |position| %>
  <tr>
    <td><%= position.name %></td>
	<td><%= position.note %></td>
    <td><%= position.description %></td>
	<% if admin %>
	    <td><%= link_to 'Show', position %></td>
	    <td><%= link_to 'Edit', edit_position_path(position) %></td>
	    <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>

  </tr>
<% end %>
</table>

</section>
</div>
</div>
