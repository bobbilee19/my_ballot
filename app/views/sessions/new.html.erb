<div class="grid-single grid-single-pad"> <!-- main wrapper -->
	<a href="/"><img src="/assets/myBallotLogo.png" alt="My Ballot Chicago Logo" class="logo-single"></a>
	<div class="col-single"> <!-- Single Col -->
	    <section class="homeContentBox"> <!-- Box -->
<h2>Sign In to MyBallot</h2>
<section class="login">
<%= form_tag "/sessions" do %>


<%= label_tag :email %> 
<%= text_field_tag :email, nil, :class => "textinput" %>

<%= label_tag :password %> 
<%= password_field_tag :password, nil, :class => "textinput" %> 

<%= submit_tag "Come on Back!", :class => "button" %>

<% end %>
</section>


</section>
</div>
</div>

